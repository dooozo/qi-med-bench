          "scan_date": {
            "type": "string",
            "description": "CT检查日期(可选)，格式：YYYY-MM-DD"
          }
        },
        "required": ["patient_id"]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "tumor_size": {
            "type": "object",
            "properties": {
              "max_diameter_mm": "number",
              "volume_cm3": "number",
              "location": "string"
            }
          },
          "lymph_nodes": {
            "type": "array",
            "items": {
              "station": "string",
              "size_mm": "number",
              "suv_value": "number"
            }
          },
          "pleural_invasion": "boolean",
          "chest_wall_invasion": "boolean",
          "atelectasis": "boolean",
          "pleural_effusion_ml": "number"
        }
      }
